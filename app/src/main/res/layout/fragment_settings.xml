<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.app.emlaee.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/size_20_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_img" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="@string/morefeature"
           android:gravity="center"
           android:textColor="@color/black"
           android:textSize="@dimen/size_18_sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:paddingRight="@dimen/size_60_dp"
            android:paddingLeft="@dimen/size_60_dp"
            android:paddingTop="@dimen/size_8_dp"
            android:paddingBottom="@dimen/size_8_dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/btnlogout"
            android:textSize="@dimen/size_18_sp" />

    </LinearLayout>

</LinearLayout>
